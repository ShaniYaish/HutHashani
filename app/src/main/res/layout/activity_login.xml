<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="0dp"
    android:background="#FFFFFFFF"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/background"
        android:fillViewport="true"
        android:paddingTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageLogoView"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="65dp"
                android:layout_marginBottom="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/logo2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="135dp"
                android:layout_marginBottom="16dp"
                android:text="התחברות"
                android:textColor="#36454f"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="44dp"
                android:layout_marginBottom="10dp"
                android:text="מייל"
                android:textColor="#36454f"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/inputEmailLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/cr20bffd3d3d3"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="13dp">

                <EditText
                    android:id="@+id/inputEmailET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="shiraz@gmail.com"
                    android:inputType="textEmailAddress"
                    android:textColor="#36454f"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="44dp"
                android:layout_marginBottom="6dp"
                android:text="סיסמא"
                android:textColor="#36454f"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/inputPasswordLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/cr20bffd3d3d3"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp">

                <EditText
                    android:id="@+id/inputPasswordET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="************"
                    android:inputType="textPassword"
                    android:textColor="#36454f"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/btnLoginLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingVertical="18dp">

                <TextView
                    android:id="@+id/btnLoginTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="התחברות"
                    android:textColor="#d3d3d3"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/registerLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="126dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/createNewAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="הירשם"
                    android:textColor="#ff7f50"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rdbwh9pcwrqm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="אין חשבון?"
                    android:textColor="#36454f"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


